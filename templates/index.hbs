{{#> base}}
{{#*inline "body"}}
<div class="hero-section bg-gradient rounded-3 p-4 mb-5">
    <div class="text-center">
        <h1 class="display-4 fw-bold mb-3">
            <i class="bi bi-broadcast text-primary me-3"></i>
            Pod Force
        </h1>
        <p class="lead mb-0">Your personal podcast aggregator</p>
        <p class="text-muted">Discover and listen to the latest episodes from your favorite shows</p>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="h3 mb-0">
        <i class="bi bi-collection-play me-2"></i>
        Latest Episodes
    </h2>
    <div class="text-muted small">
        {{episodes.length}} episodes available
    </div>
</div>

{{#if episodes}}
<div class="row g-4">
    {{#each episodes}}
    <div class="col-12">
        <div class="card episode-card h-100 border-0 shadow-sm">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-auto">
                        <div class="episode-artwork-container">
                            <img src="{{image}}" 
                                 alt="{{title}}" 
                                 class="episode-artwork rounded"
                                 loading="lazy"
                                 onerror="this.src='https://cdn.jsdelivr.net/npm/feather-icons@4.28.0/dist/icons/podcast.svg'">
                        </div>
                    </div>
                    <div class="col">
                        <div class="d-flex flex-column h-100">
                            <div class="mb-2">
                                <span class="badge bg-primary mb-2">{{feedName}}</span>
                                <h5 class="card-title mb-2">
                                    <a href="/episode/{{encodeURIComponent guid}}" class="text-decoration-none">
                                        {{title}}
                                    </a>
                                </h5>
                                <p class="card-text text-muted mb-3">
                                    {{truncate description 200}}
                                </p>
                            </div>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="text-muted small">
                                        <i class="bi bi-calendar3 me-1"></i>
                                        {{formatDate published}}
                                    </div>
                                    {{#if duration}}
                                    <div class="text-muted small">
                                        <i class="bi bi-clock me-1"></i>
                                        {{formatDuration duration}}
                                    </div>
                                    {{/if}}
                                </div>
                                <div class="mt-2">
                                    <a href="/episode/{{encodeURIComponent guid}}" class="btn btn-primary btn-sm">
                                        <i class="bi bi-play-fill me-1"></i>
                                        Listen Now
                                    </a>
                                    {{#if link}}
                                    <a href="{{link}}" target="_blank" class="btn btn-outline-secondary btn-sm ms-2">
                                        <i class="bi bi-box-arrow-up-right me-1"></i>
                                        Original
                                    </a>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<div class="text-center py-5">
    <i class="bi bi-collection text-muted display-1"></i>
    <h3 class="text-muted mt-3">No episodes found</h3>
    <p class="text-muted">Check your feed configuration or try refreshing.</p>
    <button class="btn btn-primary" onclick="refreshFeeds()">
        <i class="bi bi-arrow-clockwise me-2"></i>
        Refresh Feeds
    </button>
</div>
{{/if}}
{{/inline}}
{{/base}}